# Database
# Local Docker: postgresql://postgres:postgres@localhost:5432/pathfinder_helper?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/pathfinder_helper?schema=public"

# JWT
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_EXPIRATION="7d"

# Azure OpenAI
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4o"
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME="text-embedding-3-small"
AZURE_OPENAI_API_INSTANCE_NAME="your-resource-name"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:4200"

# Server
PORT=3000
NODE_ENV="development"

# Admin seed (used by scripts/seed-admin.ts)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="change-this-password"
