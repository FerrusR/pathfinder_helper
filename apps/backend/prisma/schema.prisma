// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// User management
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  displayName  String?  @map("display_name")
  role         UserRole @default(PLAYER)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  createdCampaigns CampaignMember[]
  createdInvites   Invite[]
  proposedRules    HomeRule[]

  @@map("users")
}

enum UserRole {
  ADMIN
  PLAYER
}

// Invite system
model Invite {
  id        String    @id @default(uuid())
  email     String
  token     String    @unique
  createdBy String    @map("created_by")
  creator   User      @relation(fields: [createdBy], references: [id])
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  @@map("invites")
}

// Campaign management
model Campaign {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdBy   String   @map("created_by")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  members   CampaignMember[]
  homeRules HomeRule[]

  @@map("campaigns")
}

model CampaignMember {
  id         String       @id @default(uuid())
  userId     String       @map("user_id")
  campaignId String       @map("campaign_id")
  role       CampaignRole
  joinedAt   DateTime     @default(now()) @map("joined_at")

  user     User     @relation(fields: [userId], references: [id])
  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@unique([userId, campaignId])
  @@map("campaign_members")
}

enum CampaignRole {
  GAMEMASTER
  PLAYER
}

// Home rules management
model HomeRule {
  id              String         @id @default(uuid())
  campaignId      String?        @map("campaign_id")
  campaign        Campaign?      @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  title           String
  content         String
  category        String?
  overridesRuleId String?        @map("overrides_rule_id")
  status          HomeRuleStatus @default(DRAFT)
  proposedBy      String         @map("proposed_by")
  proposer        User           @relation(fields: [proposedBy], references: [id])
  approvedBy      String?        @map("approved_by")
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")

  @@map("home_rules")
}

enum HomeRuleStatus {
  DRAFT
  PROPOSED
  APPROVED
  REJECTED
}

// Vector embeddings for RAG
model RuleChunk {
  id        String   @id @default(uuid())
  title     String
  category  String?
  source    String?
  content   String
  // embedding will be a vector(1536) column - requires pgvector extension
  // This will be added via a migration after pgvector is enabled
  metadata  Json?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("rule_chunks")
}

model HomeRuleChunk {
  id         String   @id @default(uuid())
  homeRuleId String   @map("home_rule_id")
  campaignId String?  @map("campaign_id")
  title      String
  category   String?
  content    String
  // embedding will be a vector(1536) column - requires pgvector extension
  // This will be added via a migration after pgvector is enabled
  metadata   Json?
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("home_rule_chunks")
}
