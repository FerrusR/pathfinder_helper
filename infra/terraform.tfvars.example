azure_subscription_id = "your-azure-subscription-id"
project_name          = "pathfinder-helper"
environment           = "dev"
location              = "eastus"
openai_location       = "eastus"
db_admin_username     = "pgadmin"
db_admin_password     = "YourSecurePassword123!"

